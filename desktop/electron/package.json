{
  "name": "custom-chart-composer-desktop",
  "version": "1.0.0",
  "description": "Electron wrapper for the Custom Chart Composer web application.",
  "author": "Custom Chart Composer Team",
  "license": "MIT",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "ELECTRON_START_URL=http://127.0.0.1:5173 electron .",
    "start": "electron .",
    "build:frontend": "npm --prefix ../../frontend run build",
    "prepare:assets": "node scripts/prepare-assets.js",
    "build": "npm run build:frontend && npm run prepare:assets && electron-builder",
    "build:win": "npm run build:frontend && npm run prepare:assets && electron-builder --win --x64"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.6.5"
  },
  "build": {
    "appId": "com.custom.chartcomposer",
    "productName": "Custom Chart Composer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "app/**/*"
    ],
    "asarUnpack": [
      "app/backend/modules/**"
    ],
    "extraResources": [
      {
        "from": "app/backend/modules",
        "to": "modules"
      },
      {
        "from": "app/backend/package.json",
        "to": "modules/package.json"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
